                    android:src="@drawable/ic_baseline_send_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receive \n1,4545HMR"
                    android:layout_marginLeft="5dp"
